<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_zap"
    app:startDestination="@id/fragListaZapatos">

    <fragment
        android:id="@+id/fragListaZapatos"
        android:name="com.example.sprintfinal5zapatos.FragListaZapatos"
        android:label="fragment_lista_zapatos"
        tools:layout="@layout/fragment_lista_zapatos" >
        <action
            android:id="@+id/action_fragListaZapatos_to_fragVistaZapatos"
            app:destination="@id/fragVistaZapatos" />
        <action
            android:id="@+id/action_fragListaZapatos_to_fragCarritoCompras"
            app:destination="@id/fragCarritoCompras" />
    </fragment>
    <fragment
        android:id="@+id/fragVistaZapatos"
        android:name="com.example.sprintfinal5zapatos.FragVistaZapatos"
        android:label="fragment_vista_zapatos"
        tools:layout="@layout/fragment_vista_zapatos" />
    <fragment
        android:id="@+id/fragCarritoCompras"
        android:name="com.example.sprintfinal5zapatos.FragCarritoCompras"
        android:label="fragment_carrito_compras"
        tools:layout="@layout/fragment_carrito_compras" />
</navigation>